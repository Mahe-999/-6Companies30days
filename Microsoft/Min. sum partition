int finddiff(int arr[],int rsum,int sum,int n)
    {
        if(n==0)
        {
            return abs((sum-rsum)-rsum);
        }
        return min(finddiff(arr,rsum+arr[n],sum,n-1),finddiff(arr,rsum,sum,n-1));
    }
	int minDifference(int arr[], int n)  
	{ 
	    // Your code goes here
	    int sum=0;
	    for(int i=0;i<n;i++)
	    {
	        sum+=arr[i];
	    }
	    bool dp[n+1][sum+1];
	    
	    for(int i=0;i<=n;i++)
	    {
	        dp[i][0]=1;
	    }
	    for(int i=1;i<=sum;i++)
	    {
	        dp[0][i]=0;
	    }
	    for(int i=1;i<=n;i++)
	    {
	        for(int j=1;j<=sum;j++)
	        {
	            dp[i][j]=dp[i-1][j];
	            if(arr[i-1]<=j)
	            {
	                dp[i][j]|=dp[i-1][j-arr[i-1]];
	            }
	        }
	    }
	    int diff=INT_MAX;
	    for(int i=sum/2;i>=0;i--)
	    {
	        if(dp[n][i]==true)
	        {
	           diff=min(diff,sum-2*i);
	        }
	    }
	   return diff; 
	} 
